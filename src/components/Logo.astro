---
export interface Props {
	href?: string;
	class?: string;
}

const { href = "/", class: className = "" } = Astro.props;
---

<a href={href} class={`logo ${className}`}>
  <svg
    width="60"
    height="50"
    viewBox="0 0 60 50"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- Abstract Triangle (A) -->
    <path
      d="M5 45 L25 8 L45 45 Z"
      stroke="url(#gradient1)"
      stroke-width="4"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
      opacity="0.9"></path>

    <!-- Industrial I-beam structure (centered in triangle) -->
    <rect x="23" y="20" width="4" height="23" fill="url(#gradient2)" rx="1"
    ></rect>
    <rect x="18" y="20" width="14" height="4" fill="url(#gradient2)" rx="1"
    ></rect>
    <rect x="18" y="39" width="14" height="4" fill="url(#gradient2)" rx="1"
    ></rect>

    <!-- Abstract accent lines -->
    <line
      x1="15"
      y1="30"
      x2="35"
      y2="30"
      stroke="url(#gradient1)"
      stroke-width="2"
      opacity="0.4"></line>
    <circle cx="25" cy="12" r="1.5" fill="var(--secondary)" opacity="0.6"
    ></circle>

    <defs>
      <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:var(--primary);stop-opacity:1"
        ></stop>
        <stop offset="50%" style="stop-color:var(--secondary);stop-opacity:1"
        ></stop>
        <stop offset="100%" style="stop-color:var(--accent);stop-opacity:1"
        ></stop>
      </linearGradient>
      <linearGradient id="gradient2" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#cd6155;stop-opacity:1"></stop>
        <stop offset="50%" style="stop-color:#a93226;stop-opacity:1"></stop>
        <stop offset="100%" style="stop-color:#7d4f3a;stop-opacity:1"></stop>
      </linearGradient>
    </defs>
  </svg>
</a>

<style>
  .logo {
    display: flex;
    align-items: center;
    cursor: pointer;
    transition: transform 0.3s ease;
    text-decoration: none;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  .logo svg {
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
  }
</style>

