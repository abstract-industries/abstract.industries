---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Abstract Industries - Creative Engineering Collective</title>
    <meta
      name="description"
      content="A creative engineering collective building digital experiences for the fun of it. Pushing the boundaries of digital innovation and artistic expression."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://abstract.industries/" />
    <meta
      property="og:title"
      content="Abstract Industries - Creative Engineering Collective"
    />
    <meta
      property="og:description"
      content="A creative engineering collective building digital experiences for the fun of it. Pushing the boundaries of digital innovation and artistic expression."
    />
    <!-- Primary large image for most platforms -->
    <meta
      property="og:image"
      content="https://abstract.industries/og-image.svg"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/svg+xml" />

    <!-- Alternative square image -->
    <meta
      property="og:image"
      content="https://abstract.industries/og-image-square.svg"
    />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    <meta property="og:image:type" content="image/svg+xml" />

    <meta property="og:site_name" content="Abstract Industries" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://abstract.industries/" />
    <meta
      name="twitter:title"
      content="Abstract Industries - Creative Engineering Collective"
    />
    <meta
      name="twitter:description"
      content="A creative engineering collective building digital experiences for the fun of it."
    />
    <meta
      name="twitter:image"
      content="https://abstract.industries/og-image.svg"
    />
    <meta
      name="twitter:image:alt"
      content="Abstract Industries - Creative Engineering Collective"
    />

    <!-- Discord and other platforms -->
    <link rel="image_src" href="https://abstract.industries/og-image.svg" />

    <!-- Additional SEO -->
    <meta name="author" content="Abstract Industries" />
    <meta
      name="keywords"
      content="creative engineering, digital experiences, software development, innovation, collective, abstract industries"
    />
    <link rel="canonical" href="https://abstract.industries/" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#00FF80" />
    <meta name="msapplication-TileColor" content="#0D0D0D" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Space+Grotesk:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    overflow-x: hidden;
  }

  * {
    box-sizing: border-box;
  }
</style>
