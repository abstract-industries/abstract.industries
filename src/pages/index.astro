---
import Layout from "../layouts/Layout.astro";
import NavLinks from "../components/NavLinks.astro";
import Logo from "../components/Logo.astro";
---

<Layout>
  <main class="hero">
    <!-- Animated Background -->
    <div class="bg-gradient"></div>
    <div class="bg-pattern"></div>

    <!-- Navigation -->
    <nav class="nav">
      <Logo />
      <NavLinks currentPath="/" />
    </nav>

    <!-- Main Content -->
    <div class="content">
      <div class="hero-text">
        <h1 class="main-title">
          <span class="title-line">ABSTRACT</span>
          <span class="title-line gradient-text">INDUSTRIES</span>
        </h1>
        <p class="subtitle">CREATIVE ENGINEERING COLLECTIVE</p>
        <p class="description">
          Building digital experiences for the fun of it
        </p>
        <div class="cta-buttons">
          <a href="/works" class="btn-primary">Explore Our Work</a>
          <a href="/contact" class="btn-secondary">Get In Touch</a>
        </div>
      </div>

      <!-- Floating Elements -->
      <div class="floating-elements">
        <div class="float-element element-1"></div>
        <div class="float-element element-2"></div>
        <div class="float-element element-3"></div>
        <div class="float-element element-4"></div>
      </div>
    </div>

    <!-- Bottom Info -->
    <div class="bottom-info">
      <div class="year">2025</div>
    </div>
  </main>
</Layout>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    background: var(--dark);
    color: var(--light);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  /* Animated Background */
  .bg-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
        circle at 20% 30%,
        var(--primary) 0%,
        transparent 50%
      ),
      radial-gradient(circle at 80% 70%, var(--secondary) 0%, transparent 50%),
      radial-gradient(circle at 60% 20%, var(--accent) 0%, transparent 50%),
      linear-gradient(135deg, var(--dark) 0%, #1a1a1a 100%);
    opacity: 0.8;
    animation: gradientShift 20s ease-in-out infinite;
  }

  .bg-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: repeating-linear-gradient(
        90deg,
        transparent,
        transparent 2px,
        rgba(255, 255, 255, 0.03) 2px,
        rgba(255, 255, 255, 0.03) 4px
      ),
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(255, 255, 255, 0.03) 2px,
        rgba(255, 255, 255, 0.03) 4px
      );
    animation: patternMove 30s linear infinite;
  }

  /* Navigation */
  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 3rem;
    position: relative;
    z-index: 10;
    width: 100%;
  }

  /* Main Content */
  .content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 3rem;
    position: relative;
    z-index: 10;
  }

  .hero-text {
    text-align: center;
    max-width: 1000px;
  }

  .main-title {
    font-family: "Space Grotesk", sans-serif;
    font-size: clamp(4rem, 12vw, 12rem);
    font-weight: 900;
    line-height: 0.9;
    margin: 0 0 1rem 0;
    letter-spacing: -0.02em;
  }

  .title-line {
    display: block;
    animation: titleSlide 1s ease-out forwards;
    opacity: 0;
    transform: translateY(100px);
  }

  .title-line:first-child {
    animation-delay: 0.2s;
  }

  .title-line:last-child {
    animation-delay: 0.4s;
  }

  .gradient-text {
    /* Fallback color for browsers that don't support gradient text */
    color: var(--primary);
    background: linear-gradient(
      45deg,
      var(--primary),
      var(--secondary),
      var(--accent)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Better browser support for gradient text */
  @supports (-webkit-background-clip: text) or (background-clip: text) {
    .gradient-text {
      color: transparent;
    }
  }

  .subtitle {
    font-size: clamp(1rem, 2.5vw, 1.5rem);
    font-weight: 700;
    letter-spacing: 0.2em;
    margin: 0 0 2rem 0;
    color: var(--light);
    text-shadow:
      0 0 10px rgba(255, 255, 255, 0.5),
      0 0 20px rgba(0, 255, 128, 0.3),
      0 0 30px rgba(0, 255, 128, 0.2);
    animation: fadeInUp 1s ease-out 0.6s forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  .description {
    font-size: clamp(1.1rem, 2vw, 1.4rem);
    line-height: 1.6;
    margin: 0 0 3rem 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    color: #cccccc;
    animation: fadeInUp 1s ease-out 0.8s forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 1s ease-out 1s forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  .btn-primary,
  .btn-secondary {
    padding: 1rem 2rem;
    border: none;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .btn-primary {
    background: linear-gradient(45deg, var(--primary), var(--accent));
    color: var(--light);
    box-shadow: 0 10px 30px rgba(255, 0, 128, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(255, 0, 128, 0.4);
  }

  .btn-secondary {
    background: transparent;
    color: var(--light);
    border: 2px solid var(--light);
  }

  .btn-secondary:hover {
    background: var(--light);
    color: var(--dark);
    transform: translateY(-3px);
  }

  /* Floating Elements */
  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .float-element {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
  }

  .element-1 {
    width: 200px;
    height: 200px;
    background: var(--primary);
    top: 10%;
    left: 10%;
    animation: float 6s ease-in-out infinite;
  }

  .element-2 {
    width: 150px;
    height: 150px;
    background: var(--secondary);
    top: 20%;
    right: 15%;
    animation: float 8s ease-in-out infinite reverse;
  }

  .element-3 {
    width: 100px;
    height: 100px;
    background: var(--accent);
    bottom: 30%;
    left: 20%;
    animation: float 7s ease-in-out infinite;
  }

  .element-4 {
    width: 120px;
    height: 120px;
    background: var(--primary);
    bottom: 20%;
    right: 25%;
    animation: float 9s ease-in-out infinite reverse;
  }

  /* Bottom Info */
  .bottom-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 3rem;
    position: relative;
    z-index: 10;
    width: 100%;
  }

  .year {
    font-family: "Space Grotesk", sans-serif;
    font-size: 3rem;
    font-weight: 300;
    color: #b0b0b0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.6);
  }

  /* Animations */
  @keyframes gradientShift {
    0%,
    100% {
      transform: rotate(0deg) scale(1);
    }
    50% {
      transform: rotate(180deg) scale(1.1);
    }
  }

  @keyframes patternMove {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(50px, 50px);
    }
  }

  @keyframes titleSlide {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .nav {
      padding: 1.5rem 2rem;
    }

    .content {
      padding: 0 2rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      max-width: 300px;
    }

    .bottom-info {
      padding: 1.5rem 2rem;
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .year {
      font-size: 2rem;
    }

    .floating-elements {
      display: none;
    }
  }
</style>
